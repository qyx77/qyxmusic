<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barmusicname"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp">
        <ImageView
            android:id="@+id/iv_game_disc"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/game_disc"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/iv_game_disc_light"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:background="@drawable/game_disc_light"/>
        <ImageView
            android:id="@+id/iv_game_pin"
            android:layout_gravity="right"
            android:layout_marginRight="27dp"
            android:layout_width="65dp"
            android:layout_height="170dp"
            android:background="@drawable/game_pin"/>
        <ImageButton
            android:id="@+id/bt_startPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/index_start_select"/>
    </FrameLayout>

</LinearLayout>